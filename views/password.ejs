<!DOCTYPE html>
<html>
<head>
	<title>Profile page</title>
	
<style>
 .button {
    background-color: #f44336; 
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}
</style>

    <link href="css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="css/font-awesome.css" rel="stylesheet">

</head>

<body>
<div class="header" id="home">
    <div class="banner_header_top_agile_w3ls">
            <div class="header-top-wthree-agileits">
                <nav class="navbar navbar-default">
                    <div class="navbar-header navbar-left">
                        
                        <h1><a class="navbar-brand" href="/"> Football</a></h1>
                    </div>
                                    <div class="header_left">

                    <% if((isAuthenticated)) { %>
                        <ul>
                            <li><a class="shop" href="./logout">Logout</a></li>               
                        </ul> <%} %>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">

                        <div class="top_nav_left">
                            <nav class="cl-effect-15" id="cl-effect-15">
                                <ul>
                                    <li class="active"><a href="/" data-hover="Home">Home</a></li>
                                    <li><a href="/player" data-hover="Player">Player</a></li>
                                    <li><a href="/teams" data-hover="Team">Team</a></li>
                                    
                                    <% if(!(isAuthenticated)) { %>
                                    <li><a href="/register" data-hover="Register">Register</a></li>
                                    <%} %>
                                    <% if(isAuthenticated) { %>
                                    <li><a href="/profile" data-hover="Profile">Profile</a></li>
                                    <% } %>
                                    <% if(isAuthenticated) { %>
                                    <li><a href="/transfer" data-hover="Transfers">Transfers</a></li>
                                    <% } %>
                                    <li><a href="/fixtures" data-hover="Fixtures">Fixtures</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    
                    <!-- search -->
                   <div class="search">
                      <div class="cd-main-header">
                       <ul class="cd-header-buttons">
                                  <li><a class="cd-search-trigger" href="/search"> <span></span></a></li>
                        </ul>
                      </div>
                      <div id="cd-search" class="cd-search">
                            <form action="/search" method="POST" encType="multipart/form-data">
                                <input name="search" type="search" placeholder="Click enter after typing...">
                            </form>
                      </div>
                  </div>
                    <!-- //search -->

                    <div class="clearfix"></div>
                </nav>
            </div>
        </div>
</div>

<br>
<br>

    <% if(message) {%>
  <div class="alert alert-danger" style="text-align: center;width: 50%;margin-left: 30%">
       <p><%= message %></p>
     </div>
<% } %>

<% if(errors) {%>
<% errors.forEach(function(errors){ %>
  <div class="alert alert-danger" style="text-align: center;width: 50%;margin-left: 30%">
       <p><%= errors.msg %></p>
  </div>
<% }); %>
<% } %>

<div class="container bootstrap snippet" >

    <div class="row">

    <form class="form" action="/pwd" method="post" id="registrationForm" enctype="multipart/form-data">

        <div class="col-sm-3"><!--left col-->


           </hr><br>
        </div><!--/col-3-->


        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li><a data-toggle="tab" href="/profile">Profile</a></li>
                <li class="active"><a data-toggle="tab" href="/pwd"> Change Password</a></li>
            </ul>


           
             <div class="tab-pane" id="messages">

               <hr>
                      <div class="form-group">

                          <div class="col-xs-7">
                              <br><label for="password"><h4> Old Password</h4></label>
                               <input type="password" class="form-control" name="oldpwd" id="oldpwd" placeholder="Old password" title="enter old password" value="">
                          </div>
                      </div>


                          <div class="form-group">

                          <div class="col-xs-7">
                              <br><label for="password"><h4> New Password</h4></label>
                               <input type="password" class="form-control" name="newpwd" id="newpwd" placeholder="New password" title="enter new password" value="">
                          </div>
                      </div>


                          <div class="form-group">
                          <div class="col-xs-7">
                              <br><label for="password"><h4> Confirm New Password</h4></label>
                              <input type="password" class="form-control" name="confirmpwd" id="confirmpwd" placeholder="Confirm password" title="enter new password" value=""> 
                          </div>
                      </div>

                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                                <br>
                                <button class="btn btn-lg btn-success" type="submit" style="background-color: #0f2453"><i class="glyphicon glyphicon-ok-sign"></i>Save</button>                               
                            </div>
                      </div>

                </form>

             </div><!--/tab-pane-->


              </div><!--/tab-pane-->
    </div><!--/tab-content-->




</body>
</html>
