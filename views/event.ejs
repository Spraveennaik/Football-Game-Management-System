<html>
<head>
	<title><%= siteTitle %> - <%= pageTitle %></title>
	<meta charset="UTF-8">
		<title>simple app</title>

		<link rel="stylesheet" href="/pcss/bootstrap.min.css"/>
		<script src="/pjs/jquery.min.js"></script>
		<script src="/pjs/tether.min.js"></script>
		<script src="/pjs/bootstrap.min.js"></script>
	<style>
		*{border-radius: 0px !important}
	</style>
</head>

<body>
	<nav class="navbar navbar-dark bg-primary">
		<span class="navbar-brand" style="color:#fff"><%= pageTitle %></span>
	</nav>

	<br>
<div class="">
	<div class="col s12">
		<a href="/event/add" class="btn btn-success btn-lg">Add a new event</a>
	</div>
</div>
<br>

<div class="=">
	<div class="col s12">
		<% if(items.length > 0) { %>
			<table class="table">
				<thead>
					<tr>
						<th style="width:1%;text-align:center;">ID</th>
						<th style="width:49%">Name</th>
						<th style="width: 20%">Description</th>
						<th style="width: 10%">Location</th>
						<th solspan="2" style="width: 20%;text-align: center;">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% items.forEach(function(item,index){ %>
						<tr>
							<td style="width: 1%;text-align: center;"><%= index+1 %></td>
							<td style="width: 49%"><%= item.e_name %> </td>
							<td style="width: 20%"><%= item.e_description %></td>
							<td style="width:10%"><%= item.e_location %> </td>
							<td solspan="2" style="width: 20%;text-align: center">
								<a href="/event/edit/<%= item.e_id %>" class="btn btn-success">Edit</a>
								<a href="/event/delete/<%= item.e_id %>" class="btn btn-danger">Delete</a>
							</td>	
						</tr>
					<% }); %>
				</tbody>
			</table>
		<% }else{ %>
			<p><strong>There are no records available</strong></p>
		<% } %>
	</div>
</div>

</body>
</html>

		