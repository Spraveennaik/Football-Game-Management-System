<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
    <link rel="shortcut icon" type="image/png" href="images/foot.png">

<style>
 .button {
    background-color: #f44336;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}
</style>

    <link href="css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="css/font-awesome.css" rel="stylesheet">

    <meta charset="UTF-8">

</head>

<body>


<div class="header" id="home">
    <div class="banner_header_top_agile_w3ls">
            <div class="header-top-wthree-agileits">
                <nav class="navbar navbar-default">
                    <div class="navbar-header navbar-left">

                        <h1><a class="navbar-brand" href="/"> Football</a></h1>
                    </div>
                                    <div class="header_left">

                    <% if((isAuthenticated)) { %>
                        <ul>
                            <li><a class="shop" href="./logout">Logout</a></li>
                        </ul> <%} %>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">

                        <div class="top_nav_left">
                            <nav class="cl-effect-15" id="cl-effect-15">
                                <ul>
                                    <li class="active"><a href="/" data-hover="Home">Home</a></li>
                                    <li><a href="/player" data-hover="Player">Player</a></li>
                                    <li><a href="/teams" data-hover="Team">Team</a></li>

                                    <% if(!(isAuthenticated)) { %>
                                    <li><a href="/register" data-hover="Register">Register</a></li>
                                    <%} %>
                                    <% if(isAuthenticated) { %>
                                    <li><a href="/profile" data-hover="Profile">Profile</a></li>
                                    <% } %>
                                    <% if(isAuthenticated) { %>
                                        <li><a href="/transfer" data-hover="Transfers">Transfers</a></li>
                                        <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>


                    <div class="clearfix"></div>
                </nav>
            </div>
        </div>
</div>

<br>
<br>
<div class="container">
    <h1 style="text-align: center;">Simulate Matches</h1>
</div>
<br>
<br>
<div>
	<table class="table" style="width: 75%;text-align: center;margin-left: 10%;">
		<thead>
      <tr>
        <th><center><%= team1[0].TName %></center></th>
        <th><center><%= team2[0].TName %></center></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th style="text-align: center;font-size: 40px;"><%= m=goal1 %></th>
        <th style="text-align: center;font-size: 40px;"><%= n=goal2 %></th>
      </tr>
    </tbody>
    <tbody>
    <% var i %>
    <% var max;
        if(goal1>goal2)
        max=goal1;
        else
        max=goal2; %>
    <% for(i=0;i < max;++i){ %>
        <tr>
            <% if(i< goal1) { %>
            <td><%= striker1[goalscorers1[i]].firstname %> <%= striker1[goalscorers1[i]].lastname %> - <%= Math.floor(Math.random() * (90 - 5)) + 5 %>' </td>
            <% } else { %>
            <td>&nbsp;</td>
            <% } %>
            <% if(i< goal2) { %>
            <td><%= striker2[goalscorers2[i]].firstname %> <%= striker2[goalscorers2[i]].lastname %> - <%= Math.floor(Math.random() * (90 - 5)) + 5 %>'</td>
            <% } else { %>
                <td>&nbsp;</td>
                <% } %>
        </tr>
        
    <% } %>
    </tbody>
    
	</table>
</div>
<br>
<br>
<% if(isAuthenticated) { %>
    <center><a href="/fixtures" data-hover="Fixtures" class="btn btn-success" style="background-color: blue">Role the dice again!!</a></center>
    <% } %>
</body>

</html>
